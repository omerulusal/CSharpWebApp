@model Movie;
<div id="filmler">
    <div class="card mb-3" style="max-width: 540px;">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="/img/@Model.ImageUrl" class="img-fluid rounded-start" alt="@Model.Title">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">@Model.Title</h5>
                    <p class="d-flex">
                        <a asp-route-id="@Model.MovieId" asp-controller="Movies" asp-action="Details" class="btn btn-primary mr-1">
                            @* asp-route-id href'i temsil eder. buna tıklayınca MoviesControllerdaki Details Metodu calisir *@
                            Details
                        </a>
                        <a asp-route-id="@Model.MovieId" asp-controller="Movies" asp-action="Edit" class="btn btn-warning mr-1">
                            @* asp-route-id href'i temsil eder. buna tıklayınca MoviesControllerdaki Edit Metodu calisir *@
                            Edit
                        </a>
                        <form asp-controller="Movies" asp-action="Delete" method="post">
                            <input type="hidden" name="Title" value="@Model.Title" />
                            <input type="hidden" name="MovieId" value="@Model.MovieId" />
                            <button type="submit" value="Delete" class="btn btn-danger">Delete</button>
                        </form>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>


